@model ShowReel.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<div class="login-box">
    <p class="text-success">@ViewBag.StatusMessage</p>
        <h2 class="txt--center line-under">Change your account settings</h2>
        <div class="form-group">
            <label>Password:</label>
            <a href="@if (Model.HasPassword) {@Url.Action("ChangePassword", "Manage");} else{@Url.Action("SetPassword", "Manage")}" class="btn btn--red">
                Change your password
            </a>
       </div>
    <div class="form-group">
            <label>External Logins:</label>
            <a href="@Url.Action("ManageLogins", "Manage")" class="btn btn--red">
                Manage - [@Model.Logins.Count]</a>
        </div>
</div>
