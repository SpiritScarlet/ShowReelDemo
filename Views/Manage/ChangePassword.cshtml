@model ShowReel.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="login-box">
    <h2 class="txt--center line-under">Change Password</h2>

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword)
        <div class="input-container">
            <span class="input-background"><i class="fa fa-lock"></i></span>
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-style", @placeholder="Old Password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword)
        <div class="input-container">
            <span class="input-background"><i class="fa fa-lock"></i></span>
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-style", @placeholder = "New Password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        <div class="input-container">
            <span class="input-background"><i class="fa fa-repeat"></i></span>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-style", @placeholder = "Confirm Password" })
        </div>
    </div>
    <div class="form-group">
            <input type="submit" value="Change password" class="btn btn--red btn--full" />
    </div>
</div>
    
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}